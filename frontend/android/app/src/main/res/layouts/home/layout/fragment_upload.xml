<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btnCreateNewPost"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_ripple_light_on_blue"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/medium"
            android:gravity="center"
            android:text="Create New Post"
            android:textColor="@color/colorWhite"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/btnCreateNewCompetition"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_ripple_blue_on_white"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/medium"
            android:gravity="center"
            android:text="Create New Competition"
            android:textColor="@color/colorBlue"
            android:textSize="24sp" />

    </LinearLayout>

</layout>