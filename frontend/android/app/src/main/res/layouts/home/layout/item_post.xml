<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/colorCardBackground"
        android:elevation="1dp"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            app:viewAspectRatio="1.5" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/medium"
            android:text="Some bigass title"
            android:textColor="@color/colorBlack"
            android:textSize="24sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"
                    android:text="by"
                    android:textColor="@color/colorMedium"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvOwnerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/bold"
                    android:text="Suhel Chakraborty"
                    android:textColor="@color/colorDark"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="@font/regular"
                android:text="2 days ago"
                android:textColor="@color/colorMedium"
                android:textSize="12sp" />

        </FrameLayout>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/regular"
            android:lineSpacingMultiplier="1.15"
            android:text="@string/lipsum"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingBottom="8dp"
            android:paddingEnd="12dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvLikesCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:text="360"
                    android:textColor="@color/colorDark"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvLikesLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:fontFamily="@font/regular"
                    android:text="likes"
                    android:textColor="@color/colorMedium"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvCommentsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/bold"
                    android:text="24"
                    android:textColor="@color/colorDark"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvCommentsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:fontFamily="@font/regular"
                    android:text="comments"
                    android:textColor="@color/colorMedium"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal">

                <com.suhel.photosphere.custom.view.TintableImageButton
                    android:id="@+id/btnComment"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="6dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_comment_filled" />

                <com.suhel.photosphere.custom.view.TintableImageButton
                    android:id="@+id/btnLike"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="12dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="6dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_like_filled" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</layout>